<Page x:Class="Library.page.AuthorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Library.page"
      mc:Ignorable="d"
      d:DesignHeight="550"
      d:DesignWidth="700"
      Title="Авторизация">
    <StackPanel Margin="0 50 0 0">
        <Image Source="../img/logo_vis222.png" 
           Width="300"/>
        <StackPanel Margin="0 20 0 0"
                Width="200">
            <TextBlock Text="LOGIN" 
                 TextAlignment="Left"
                 Margin="0 0 0 5"/>
            <TextBox x:Name="tbLogin" Width="200" 
               Text="{Binding Login}" Background="#FFE6F3F3" BorderBrush="#FFE6F3F3"/>
        </StackPanel>
        <StackPanel Margin="0 20 0 0"
                Width="200">
            <TextBlock Text="PASSWORD" 
                 TextAlignment="Left"
                 Margin="0 0 0 5"/>
            <StackPanel Orientation="Horizontal" Width="200">
                <PasswordBox x:Name="tbPassword" PasswordChanged="tbPassword_PasswordChanged"
                   
               Width="175" Background="#FFE6F3F3"
                   BorderBrush="#FFE6F3F3"/>
                <TextBox x:Name="tbVisiblePassword" TextChanged="tbVisiblePassword_TextChanged"
                   Visibility="Collapsed"
               Width="175" Background="#FFE6F3F3"
                   BorderBrush="#FFE6F3F3"/>
                <Button x:Name="btnShowPassword" Click="btnShowPassword_Click">
                    <Button.Content>
                        <Image Source="/img/207-2073226_show-icon-png-white-password-view-icon.png" Width="25"/>
                    </Button.Content>
                </Button>
            </StackPanel>
            
            


        </StackPanel>
        
        <Button Content="ENTER"
            Click="LoginClick" Style="{StaticResource ButtonEnter}"/>
    </StackPanel>
</Page>
