<Page x:Class="Library.page.ReadersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Library.page"
      mc:Ignorable="d"
      d:DesignHeight="550"
      d:DesignWidth="700"
      Title="Читатели">
    <Grid Margin="20 0 20 0">

        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal"
                  VerticalAlignment="Center">
                <TextBox x:Name="searchTB" TextAlignment="Center" 
                 Width="150"
                 Height="25"
                 Margin="5 0 0 0"
                 TextChanged="SearchTextChanged"
                 Background="#FFE6F3F3" BorderBrush="#FFE6F3F3">
                    <TextBox.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="10"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
                <Label Content="Поиск по читателю"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                  VerticalAlignment="Center"
                  HorizontalAlignment="Right"
                  Grid.Column="1">
                <Image Source="../img/img_570846.png"
               Width="35" 
               Margin="0 0 20 0"/>
                <Image Source="../img/img_20646.png"
               Width="35" 
               MouseDown="CSVMouseDown"/>
            </StackPanel>
        </Grid>
        <ScrollViewer Grid.Row="1">
            <WrapPanel HorizontalAlignment="Center">
                <ItemsControl ItemsSource="{Binding Readers}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="20 10 20 10">

                                <Ellipse Width="120"
                         Height="120">
                                    <Ellipse.Fill>
                                        <ImageBrush ImageSource="{Binding Photo}" Stretch="UniformToFill"/>
                                    </Ellipse.Fill>
                                </Ellipse>
                                <TextBlock Text="{Binding Initials}" 
                           TextAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </WrapPanel>
        </ScrollViewer>
        <Button  Click="btnExet_Click" Background="White" HorizontalAlignment="Left" Margin="5,0,0,0" Grid.Row="2" VerticalAlignment="Center" Height="50" Width="57" BorderThickness="0">
            <Image Source="/page/tlb-logout-1.png"/>
        </Button>
        <Image Source="/page/book.png" Margin="502,0,-12,0" Grid.Row="2"/>
    </Grid>
</Page>
